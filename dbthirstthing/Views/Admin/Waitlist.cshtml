@model IEnumerable<dbthirstthing.Models.PreregistrationModel>

@{
    ViewBag.Title = "Index";
}

<h2>Список ожидания</h2>


<table class="table">
    <tr>
        <th>
            Отображаемое имя
        </th>
        <th>
            Логин
        </th>

        <th>
            Почта
        </th>
        <th>
            О пользователе
        </th>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.displayname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.aboutuser)
            </td>
            <td>

                    @Html.DropDownList("RoleId", new SelectList(ViewBag.Roles, "roleid", "rolename"), "-- Select Role --") @*я хуй знает, это невозможно бля*@
                

            </td>
            <td>
                @Html.ActionLink("Подтвердить", "Confirm", new { id = item.userid })  |

                @Html.ActionLink("Отказать", "Delete", new { id = item.userid })
            </td>
        </tr>
    }

</table>
